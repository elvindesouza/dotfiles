#!/bin/bash
tar -czvf ~/.config/librewolf/lax.tar.gz /home/user/.var/app/io.gitlab.librewolf-community/.librewolf/lax
tar -czvf ~/.config/librewolf/strict.tar.gz /home/user/.var/app/io.gitlab.librewolf-community/.librewolf/strict

gpg -r elvindesouza@gmail.com -e ~/.config/librewolf/lax.tar.gz
gpg -r elvindesouza@gmail.com -e ~/.config/librewolf/strict.tar.gz

rm ~/.config/librewolf/lax.tar.gz
rm ~/.config/librewolf/strict.tar.gz

/usr/bin/git --git-dir="$HOME"/.dotfiles/ --work-tree="$HOME" add ~/.config/librewolf/lax.tar.gz.gpg
/usr/bin/git --git-dir="$HOME"/.dotfiles/ --work-tree="$HOME" add ~/.config/librewolf/strict.tar.gz.gpg
