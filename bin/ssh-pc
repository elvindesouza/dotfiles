#
completed_ps = subprocess.run(
    """
curl \
-X GET \
-H "Authorization: Bearer 2QsrdLP9x6l4RlIagxTX1Vo2uEO_ZsLnDyLqNKgjfqHGprQ6" \
-H "Ngrok-Version: 2" \
https://api.ngrok.com/endpoints \
""",
    shell=True,
    encoding="utf-8",
    capture_output=True,
)

response = json.loads(completed_ps.stdout)
endpoints = response["endpoints"]
url = str(endpoints[0]["public_url"]).split(":")
url[1] = url[1].replace("/", "")

host = url[1]
port = url[2]

print(url)
subprocess.run(["ssh", "user@" + host, "-p", port, "-L", "5900:localhost:5900" , "-L", "8765:localhost:8765", "-L", "6600:localhost:6600"])

